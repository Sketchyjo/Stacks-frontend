# Stacks Mobile App - Development Environment
# Docker and Services Configuration

# Backend API Configuration
API_BASE_URL=http://localhost:8080/api
API_TIMEOUT=30000

# Database Configuration
POSTGRES_DB=stacks
POSTGRES_USER=stacks_user
POSTGRES_PASSWORD=stacks_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
# WARNING: This is a weak key for development only
# Generate a strong key for production: openssl rand -base64 32
EXPO_PUBLIC_ENCRYPTION_KEY=dev_key_change_in_production_32c

# Expo Configuration
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
EXPO_PACKAGER_PROXY_URL=http://localhost:8081

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=stacks:dev:

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLS=true

# Security (Development Only - CHANGE IN PRODUCTION)
# Generate strong secrets: openssl rand -base64 64
JWT_SECRET=dev_jwt_secret_change_in_production_use_openssl_rand
ENCRYPTION_KEY=dev_encryption_key_32_chars_long_change_me
BCRYPT_ROUNDS=8

# IMPORTANT: Generate strong keys for production
# Use: openssl rand -base64 32
# Example strong keys (DO NOT USE THESE IN PRODUCTION):
# EXPO_PUBLIC_ENCRYPTION_KEY=<generate-your-own-32-char-key>
# JWT_SECRET=<generate-your-own-jwt-secret>